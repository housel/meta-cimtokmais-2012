From 61ec9906e9c58a915065bbbe7d8a6fd515a601e2 Mon Sep 17 00:00:00 2001
From: "Peter S. Housel" <housel@acm.org>
Date: Thu, 21 Jun 2012 21:50:34 -0700
Subject: [PATCH] find_program_required: Suppress use of CMAKE_FIND_ROOT_PATH

---
 cmake/find_program_required.cmake |    3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/cmake/find_program_required.cmake b/cmake/find_program_required.cmake
index db297b1..a4b30d5 100644
--- a/cmake/find_program_required.cmake
+++ b/cmake/find_program_required.cmake
@@ -1,6 +1,7 @@
 function(find_program_required ARG_VAR ARG_PROGRAM_NAME)
   parse_arguments(ARG "PATHS" "" ${ARGN})
-  find_program(${ARG_VAR} ${ARG_PROGRAM_NAME} PATHS ${ARG_PATHS})
+  find_program(${ARG_VAR} ${ARG_PROGRAM_NAME} PATHS ${ARG_PATHS}
+               NO_CMAKE_FIND_ROOT_PATH)
   if(NOT ${ARG_VAR})
     message(FATAL_ERROR "${ARG_PROGRAM_NAME} not found")
   else()
